@using FluentMvcGrid
@using FluentMvcGridExample.Models

@model FluentMvcGridExample.ViewModels.Home.HomeIndexViewModel

@{
    ViewBag.Title = "Index";
}

@(Html.FluentMvcGrid(Model.Data)
        .Class("table table-striped table-hover table-bordered")
        .AddColumn(column => column.Format(item => item.FirstName).HeaderText("Nombre").Sortable(true).SortBy("FirstName"))
        .AddColumn(column => column.Format(item => item.LastName).HeaderText("Apellidos").Sortable(true).SortBy("LastName"))
        .AddColumn(column => column.Format(item => item.Age).HeaderText("Edad"))
        .AddColumn(column => column.Format(item => item.Gender == Gender.Male ? "Hombre" : "Mujer").HeaderText("Género"))
        .AddColumn(column => column.Format(@<text>@string.Format("{0:d}", item.Birthday)</text>).HeaderText("Cumpleaños"))
        .Pagination(pagination => pagination.PageIndex(Model.PageIndex).TotalCount(Model.TotalCount))
        .Eof(@<p>No hay registros que mostrar</p>)
        .HeadersIfEof(false))